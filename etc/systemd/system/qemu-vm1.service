[Unit]
Description=Auto start QEMU virtual machine
After=vgpu.service network.target
[Service]
Type=forking
Environment="type=system-x86_64" "haltcmd=kill -INT "
EnvironmentFile=/var/vm/scripts/env.sh
ExecStart=/bin/sh -c "/var/vm/scripts/start-vm1.sh"
ExecStop=/bin/sh -c "/var/vm/scripts/stop-vm1.sh"
TimeoutStopSec=30
KillMode=none
[Install]
WantedBy=multi-user.target

